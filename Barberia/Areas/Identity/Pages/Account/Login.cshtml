@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}
<style>
    .page-title {
        font-weight: 700;
        color: #1e1e1e;
        border-left: 5px solid #ffc107;
        padding-left: 12px;
        margin-bottom: 10px;
    }</style>

<div class="login-container mt-5">
    <div class="login-card shadow-lg p-4">

        <div class="text-center mb-4">
            <h1 class="page-title text-center d-inline-block">Bienvenido</h1>
            <p class="subtitle-muted">Inicia sesión para continuar.</p>
        </div>

        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control login-input" autocomplete="username" placeholder="email" />
                <label asp-for="Input.Email">Correo electrónico</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control login-input" autocomplete="current-password" placeholder="password" />
                <label asp-for="Input.Password">Contraseña</label>
            </div>

        
            <button type="submit" class="btn btn-warning w-100 fw-bold">Ingresar</button>

            <div class="mt-4 text-center">

                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark fw-semibold">
                    Crear cuenta nueva
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
