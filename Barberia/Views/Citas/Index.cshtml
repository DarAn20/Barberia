@model IEnumerable<Barberia.Models.Cita>

@{
    ViewData["Title"] = "Index";
}

<style>
    .page-title {
        font-weight: 700;
        color: #1e1e1e;
        border-left: 5px solid #ffc107;
        padding-left: 12px;
        margin-bottom: 20px;
    }

    .btn-custom-primary {
        background-color: #ffc107;
        border: none;
        color: #000;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 10px;
        transition: .2s ease;
    }

        .btn-custom-primary:hover {
            background-color: #ffb300;
        }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,.1);
    }

        .table-custom thead {
            background-color: #f0f0f0;
            font-weight: 600;
        }

        .table-custom th,
        .table-custom td {
            padding: 14px;
            border-bottom: 1px solid #e0e0e0;
            color: #1e1e1e;
        }

        .table-custom tbody tr:hover {
            background-color: #fff4d0;
            transition: .2s;
        }

    .action-links a {
        color: #000;
        font-weight: 500;
        margin-right: 8px;
        text-decoration: none;
    }

        .action-links a:hover {
            color: #ffc107;
        }

    .table-custom {
        background-color: #212529;
        color: white;
    }

        .table-custom thead th {
            background-color: #343a40;
            color: white;
        }

        .table-custom tbody tr:hover {
            background-color: #495057;
        }

    .badge-price {
        background-color: #ffe08a;
        color: #000;
        font-size: 1rem;
        padding: 6px 12px;
        border-radius: 8px;
    }

</style>

<div class="text-center mb-4">
    <h1 class="page-title text-center d-inline-block">Citas</h1>
    <p class="subtitle-muted">Gestione, edite y administre las citas en la barbería.</p>
</div>

<p>
    <a asp-action="Create" class="btn-custom-primary shadow-sm">Nueva Cita</a>
</p>

<table class="table table-striped table-hover table-custom align-middle mb-0">
    <thead>
        <tr>
            <th class="text-center">@Html.DisplayNameFor(model => model.FechaHora)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.cliente)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.cliente.Email)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Servicio)</th>
            <th class="text-center">Precio Del Servicio</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.FechaHora)</td>
                <td class ="text-center">@Html.DisplayFor(modelItem => item.cliente.NombreCliente)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.cliente.Email)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.Servicio.NombreServicio)</td>
                <td class="text-center"><span class="badge-price">₡ @Html.DisplayFor(modelItem => item.Servicio.Precio)</span></td>
                <td class="text-center action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.CitaId" class="btn btn-sm btn-outline-primary me-1">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.CitaId" class="btn btn-sm btn-outline-secondary me-1">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CitaId" class="btn btn-sm btn-outline-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
