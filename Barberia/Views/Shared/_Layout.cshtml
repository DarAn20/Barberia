<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Barbería El Corte</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Iconos -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- CSS Personalizado -->
    <link rel="stylesheet" href="~/css/site.custom.css" />
</head>

<body class="bg-light">

    @* NAVBAR *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container">

            <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" href="/">
                <i class="fa-solid fa-scissors me-2 text-warning"></i>
                Barbería <span class="text-warning">El Corte</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a asp-controller="Clientes" asp-action="Index" class="nav-link px-3">
                            <i class="fa-solid fa-user-group me-1"></i> Clientes
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Citas" asp-action="Index" class="nav-link px-3">
                            <i class="fa-solid fa-calendar-check me-1"></i> Agendar Cita
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Servicios" asp-action="Index" class="nav-link px-3">
                            <i class="fa-solid fa-briefcase me-1"></i> Servicios
                        </a>
                    </li>
                </ul>

                @* CUENTA *@
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3" href="#" id="userDrop" role="button" data-bs-toggle="dropdown">
                            <i class="fa-solid fa-user"></i> Cuenta
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" href="#">Entrar (placeholder)</a></li>
                            <li><a class="dropdown-item" href="#">Roles (próximo)</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    @* FOOTER *@
    <footer class="bg-dark text-light py-3 mt-4 border-top border-secondary">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                © @DateTime.Now.Year Barbería El Corte — <span class="text-warning">Elegancia y estilo</span>
            </div>
            <div>
                <i class="fa-solid fa-graduation-cap me-1 text-warning"></i> Proyecto Universitario
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
