<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Barbería</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-..." crossorigin="anonymous">

    <!-- Iconos (opcional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Tu CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.custom.css" />
</head>
<body class="bg-light">
    @* Navbar *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <<a class="navbar-brand" href="/">Barbería <span class="text-warning">El Corte</span></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
<ul class="navbar-nav me-auto mb-2 mb-lg-0">

    <li class="nav-item">
        <a asp-controller="Clientes" asp-action="Index" class="nav-link">Clientes</a>
    </li>
                    <li class="nav-item">
                        <a asp-controller="Citas" asp-action="Index" class="nav-link">Agendar Cita</a>
                    </li>
    <li class="nav-item">
        <a asp-controller="Servicios" asp-action="Index" class="nav-link">Servicios</a>
    </li>

    <li class="nav-item">


                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDrop" role="button" data-bs-toggle="dropdown">
                            Cuenta
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Entrar (placeholder)</a></li>
                            <li><a class="dropdown-item" href="#">Roles (próximo)</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light py-3 mt-4">
        <div class="container d-flex justify-content-between">
            <div>© @DateTime.Now.Year Barbería El Corte</div>
            <div>Diseño por Numa</div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-..." crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
