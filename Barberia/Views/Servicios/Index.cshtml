@model IEnumerable<Barberia.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<style>
    .page-title {
        font-weight: 700;
        color: #1e1e1e;
        border-left: 5px solid #ffc107;
        padding-left: 12px;
        margin-bottom: 10px;
    }

    .subtitle-muted {
        color: #555;
    }

    .btn-custom-primary {
        background-color: #ffc107;
        border: none;
        color: #000;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 10px;
        transition: .2s ease;
    }

        .btn-custom-primary:hover {
            background-color: #ffb300;
        }

    .card-custom {
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid #e4e4e4;
        box-shadow: 0 2px 6px rgba(0,0,0,.1);
    }

    .card-header-custom {
        background: #fff8e1;
        border-bottom: 1px solid #f0e3b2;
        color: #1e1e1e;
        font-weight: 700;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
    }

        .table-custom thead {
            background-color: #f0f0f0;
            font-weight: 600;
        }

        .table-custom th,
        .table-custom td {
            padding: 14px;
            border-bottom: 1px solid #e0e0e0;
            color: #1e1e1e;
        }

        .table-custom tbody tr:hover {
            background-color: #fff4d0;
            transition: .2s;
        }

    .badge-price {
        background-color: #ffe08a;
        color: #000;
        font-size: 1rem;
        padding: 6px 12px;
        border-radius: 8px;
    }

    .action-buttons .btn {
        border-radius: 8px;
        font-weight: 600;
    }

    .btn-outline-primary:hover {
        color: #000;
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-outline-secondary:hover {
        background-color: #e4e4e4;
        border-color: #bababa;
    }

    .btn-outline-danger:hover {
        background-color: #ffb3b3;
        border-color: #ff8080;
    }

    .table-custom {
        background-color: #212529;
        color: white;
    }

        .table-custom thead th {
            background-color: #343a40;
            color: white;
        }

        .table-custom tbody tr:hover {
            background-color: #495057;
        }

</style>


<div class="container py-4">

    <div class="text-center mb-4">
        <h1 class="page-title text-center d-inline-block">Nuestros Servicios</h1>
        <p class="subtitle-muted">Gestione, edite y administre los servicios ofrecidos en la barbería.</p>
    </div>

    <!-- Botón Crear -->
    <p>
        <a asp-action="Create" class="btn-custom-primary shadow-sm">Nuevo Servicio</a>
    </p>

    <!-- Tabla -->
    <div class="card-custom shadow-sm">
        

        <div class="card-body p-0">
            <table class="table table-striped table-hover table-custom align-middle mb-0" ">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreServicio)</th>
                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.NombreServicio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>
                                <span class="badge-price">
                                    ₡ @Html.DisplayFor(modelItem => item.Precio)
                                </span>
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.ServicioId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ServicioId" class="btn btn-sm btn-outline-secondary me-1">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ServicioId" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
