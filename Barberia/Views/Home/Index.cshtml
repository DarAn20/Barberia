@{
    ViewData["Title"] = "Inicio";
}

<style>
    body {
        background: #fafafa;
        color: #1e1e1e;
        font-family: 'Segoe UI', sans-serif;
    }

    /* EFECTO DE ENTRADA */
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* HERO PRINCIPAL */
    .welcome-banner {
        padding: 70px 40px;
        background: linear-gradient(135deg, #ffffff, #f7f7f7);
        border-radius: 20px;
        border: 1px solid #e4e4e4;
        box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.07);
        transition: 0.4s ease;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

        /* Brillo animado */
        .welcome-banner::before {
            content: "";
            position: absolute;
            top: -60px;
            left: -60px;
            width: 180px;
            height: 180px;
            background: rgba(255, 193, 7, .22);
            border-radius: 50%;
            filter: blur(40px);
            animation: pulse 5s infinite ease-in-out;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: .4;
        }

        50% {
            transform: scale(1.3);
            opacity: .7;
        }
    }

    .banner-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 15px;
    }

    .banner-text {
        font-size: 1.25rem;
        color: #444;
        max-width: 700px;
        margin: auto;
    }

    .btn-hero-gold {
        background-color: #ffc107;
        color: #000;
        padding: 15px;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: 700;
        box-shadow: 0px 6px 12px rgba(255, 193, 7, 0.4);
        transition: 0.25s ease;
    }

        .btn-hero-gold:hover {
            background-color: #ffb300;
            transform: translateY(-4px);
        }

    /* RESUMEN */
    .section-title {
        border-left: 6px solid #ffc107;
        padding-left: 12px;
        font-weight: 700;
        font-size: 1.4rem;
    }

    /* Tarjetas */
    .card-custom {
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid #dfdfdf;
        transition: .3s ease;
    }

        .card-custom:hover {
            border-color: #ffc107;
            transform: translateY(-3px);
            box-shadow: 0px 4px 12px rgba(255, 193, 7, 0.25);
        }
</style>



<!--NO TOCAR MAS VISTAS -->

<div class="fade-in mt-4">

    <!-- HERO DIRECTO A SERVICIOS  y el auteticador lo quita cuando entra-->
  

    <div class="welcome-banner">
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="mt-4 p-3 text-center"
                 style="border:2px solid #ffc107; border-radius:12px; background:#fff8dd;">
                <i class="fa-solid fa-lock fa-lg" style="color:#c99700;"></i>
                <span class="fw-semibold ms-2">
                    Para acceder a todas a las funciones debe registrarse o iniciar sesion.
                </span>
            </div>

        }
        <h1 class="banner-title">
            ¡Bienvenido a <span class="text-warning">Barbería El Corte</span>!
        </h1>

        <p class="banner-text">
            Somos una barbería con elegancia y estilo. Consulta nuestros servicios y agenda tu cita fácilmente.
        </p>

        
    </div>


    <!--NO TOCAR MAS VISTAS -->
    <!-- SECCIÓN SECUNDARIA DE ACCIONES -->
    <div class="row mt-5 g-4">

@if (User.Identity!.IsAuthenticated)
{
        <div class="col-lg-4 col-md-6">
            <div class="card card-custom p-4 text-center">
                <h3 class="fw-bold fa-solid fa-user-group">Clientes</h3>
                    <p class="text-muted">Administra y visualiza clientes registrados.</p>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-dark">Ir</a>
            </div>
        </div>
}
        <div class="col-lg-4 col-md-6 justify-content-center">
            <div class="card card-custom p-4 text-center">
                <h3 class="fw-bold text-warning fa-solid fa-briefcase">Servicios</h3>
                @if (!User.Identity.IsAuthenticated)
                {
                    <p class="text-muted">Explora cortes, estilos y precios.</p>
                }
                
                @if (User.Identity!.IsAuthenticated)
                {
                    <p class="text-muted">Administre y visualiza los servicios</p>
                }
                <a asp-controller="Servicios" asp-action="Index" class="btn btn-warning text-dark fw-semibold shadow-sm">
                    Ver Servicios
                </a>
            </div>
        </div>

@if (User.Identity!.IsAuthenticated)
{
        <div class="col-lg-4 col-md-6">
            <div class="card card-custom p-4 text-center">
                <h3 class="fw-bold fa-solid fa-calendar-check">Citas</h3>
                <p class="text-muted ">Administra y visualiza citas agendadas.</p>
                <a asp-controller="Citas" asp-action="Index" class="btn btn-outline-dark">Ir</a>
            </div>
        </div>
}
    </div>

</div>
